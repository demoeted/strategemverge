    <li>Modular: <%= @powersupply.modular %></li>
    <li>Colour: <%= @powersupply.color %></li>
    <li>Category ID: <%= link_to @categoryname.first.name, category_path(@powersupply.category_id) %></li>
  </ul>
</div>