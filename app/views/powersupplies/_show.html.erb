  <h1>Name: <%= @powersupplies.name %></h1>
  <h2>Price: $<%= @powersupplies.price %></h2>
  <h3>Specifications:</h3>
  <ul>
    <li>Type: <%= @powersupply.powersupplytype%></li>
    <li>Efficiency: <%= @powersupply.efficiency %></li>
