<div class="is-flex">
  <%= render partial: "layouts/sidenav",
              object: @categories %>

  <%= form_with(url: thermal_pastes_path, method: :get, local: true, class: "") do |form| %>
    <%= form.select :filter, options_for_select([
      ['All', 'all'],
      ['New', 'new'],
      ['Recently Updated', 'recently updated']
    ]), {}, class: ""%>
    <%= form.submit 'Search', class: "" %>
  <% end %>

  <main class="box" >
    <% @thermal_pastes.each_with_index do |thermal_paste, index| %>
      <% if index % 5 == 0 %>
          <section class="columns">
              <%= render partial: "layouts/product",
                          object: thermal_paste %>
      <% else %>
              <%= render partial: "layouts/product",
                          object: thermal_paste %>
      <% end %>
      <% if index % 5 == 4 %>
          </section>
      <% end %>
    <% end %>
    <%= paginate @thermal_pastes %>
  </main>
</div>