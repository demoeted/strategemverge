<div class="container is-max-desktop">
  <%= render partial: "layouts/crumb",
                   object: @product %>
  <% if @product.image.present? %>
    <div class="card-image">
      <figure>
        <%= image_tag @product.image, size: "200x200"%>
      </figure>
    </div>
  <% end %>
  <h1>Name: <%= @product.name %></h1>
  <h2>Price: $<%= @product.price %></h2>
  <h3>Specifications:</h3>
  <ul>
    <li>Screen Size: <%= @product.screen_size %></li>
    <li>Resolution: <%= @product.refresh_rate %></li>
    <li>Response Time: <%= @product.response_time%></li>
    <li>Panel Type: <%= @product.panel_type %></li>
    <li>Aspect Ratio: <%= @product.aspect_ratio %></li>
    <li>Category ID: <%= link_to @categoryname.first.name, "/#{@categoryname.first.name.downcase.tr(" ", "_")}" %></li>
  </ul>
</div>